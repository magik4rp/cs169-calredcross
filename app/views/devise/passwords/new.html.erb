<div id="background"></div>
<div class="header">
  <a href="/">‚Üê Back</a>
</div>
<div id="lightbox">
  <img id="logo" src="/images/ARC_Logo_Classic_Horiz_RGB.png">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
      <img class="login-symbol" src="/images/email.png">
    </div>
  
    <div class="actions">
      <%= f.submit "Reset Password", :class => "submit" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
<div id="blood-img">
  <img id="blood-guy blood-guy2" src="/images/bloodman2.png">
</div>